<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %><br/>To-Do List</h1>
    </div>

    <div class="box">
        <% listItems.forEach(function(item) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= item.name %></p>
            </div>
        <% }) %>

            <form class="item" method="post" action="/">
                <input type="text" name="addItem" placeholder="Enter a new task" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
    </div>

<%- include("footer") -%>